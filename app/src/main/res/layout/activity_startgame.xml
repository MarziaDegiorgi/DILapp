<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.polimi.dilapp.controller.LevelmapActivity"
    android:background="@drawable/default_background">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/playButton"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/play"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="?android:attr/colorForegroundInverse"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="256dp" />

        <Button
            android:id="@+id/menuButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_action_menu"
            android:onClick="showPopup"

            />

        <ImageView
            android:id="@+id/carrot"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/carrot" />

        <ImageView
            android:id="@+id/pear"
            android:layout_width="70dp"
            android:layout_height="105dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="90dp"
            android:layout_marginStart="30dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/pear" />

        <ImageView
            android:id="@+id/apple"
            android:layout_width="89dp"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="40dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/logofruitvector" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
