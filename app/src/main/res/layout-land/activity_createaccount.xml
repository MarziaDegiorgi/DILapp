<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_createaccount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_land">

    <ImageView
        android:id="@+id/welcomeImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/createAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/welcomeImage"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/carter_one"
        android:gravity="center"
        android:text="@string/select_account"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/DummyLink"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_add" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DummyLink"
        android:text="ActivityAlfa"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        />
    <Button
        android:id="@+id/DummyLink2"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="Level Map"
        />

</RelativeLayout>
